@model AppUser
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/login-form-07/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/login-form-07/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/login-form-07/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/login-form-07/css/style.css">

    <title>Login #7</title>
</head>
<body>



    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/ItemImages/e commerce.jpg" alt="Image" class="img-fluid" style="height:700px;">
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h3>KAYDOL</h3>
                                <p class="mb-4">Hemen Kaydol. En uygun fiyatlı ve kampanyalı ilanları incelemeye başla!</p>
                            </div>
                            <form method="post">
                                <div class="form-group first">
                                    <label for="username">İsim</label>
                                    <input type="text" class="form-control" id="username" asp-for="Name">

                                </div>
                                <div class="form-group first">
                                    <label for="username">Soyisim</label>
                                    <input type="text" class="form-control" id="username" asp-for="Surname">

                                </div>
                                <div class="form-group first">
                                    <label for="username">Kullanıcı Adı</label>
                                    <input type="text" class="form-control" id="username" asp-for="UserName">

                                </div>
                                <div class="form-group first">
                                    <label for="username">Mail Adresi</label>
                                    <input type="email" class="form-control" id="username" asp-for="Email">

                                </div>
                                <div class="form-group last mb-4">
                                    <label for="password">Şifre</label>
                                    <input type="password" class="form-control" id="password" asp-for="PasswordHash">

                                </div>
                                <div class="form-group last mb-4">
                                    <label for="password">Şifre Tekrar</label>
                                    <input type="password" class="form-control" id="password">

                                </div>

                             
                                <button id="register" type="submit" class="btn btn-block btn-primary">Kayıt Ol</button>
                             

                           
                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


    <script src="~/login-form-07/js/jquery-3.3.1.min.js"></script>
    <script src="~/login-form-07/js/popper.min.js"></script>
    <script src="~/login-form-07/js/bootstrap.min.js"></script>
    <script src="~/login-form-07/js/main.js"></script>
</body>
</html>
